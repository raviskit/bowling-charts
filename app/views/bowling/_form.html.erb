
<div class="jumbotron">
  <%= form_tag bowling_frame_path, class: 'form-horizontal' do %>
    <label><b>Enter the Pins knocked:</b></label><p>
    <div id="pins_form">
      <%= hidden_field_tag :frame_number, @game.frame_number if @game%>
      <div class="form-group" id="try1-block">
        <div class="row">
          <%= label_tag(:try1, 'Try1',  class: 'control-label') %>
          <div class="col-sm-10">
            <%= text_field_tag :try1, 0, size: 3, maxlength: 2 %>
          </div>
        </div>
      </div>
        <br />
      <div class="form-group" id="try2-block">
        <div class="row">
          <%= label_tag(:try2, 'Try2', class: 'control-label') %>
          <div class="col-sm-10">
            <%= text_field_tag :try2, 0, size: 3, maxlength: 2 %><br />
          </div>
        </div>
      </div>
    </div>

    <br />
    <%= submit_tag 'Submit Frame'%>
  <% end %>
</div>